                <Label x:Name="lblNormalKills" Content="" HorizontalAlignment="Left" Margin="112,76,0,0" VerticalAlignment="Top"/>
                <Label Content="Towers destroyed:" HorizontalAlignment="Left" Margin="7,104,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblNormalTurrets" Content="" HorizontalAlignment="Left" Margin="112,104,0,0" VerticalAlignment="Top"/>
