                <Label Content="Wins:" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
                <Label x:Name="lblNormalWins" Content="" HorizontalAlignment="Left" Margin="112,48,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.9,-0.739"/>
