            <Label x:Name="lblDominionKills" Content="" HorizontalAlignment="Left" Margin="110,183,0,0" VerticalAlignment="Top"/>
            <Label Content="Normal 3v3" HorizontalAlignment="Left" Margin="10,245,0,0" VerticalAlignment="Top"/>
